rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSuperAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/AppAdmins/$(request.auth.uid));
    }
    
    function isAdminOfOrg(orgId) {
      return request.auth != null && 
        exists(/databases/$(database)/documents/Organizations/$(orgId)/Members/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/Organizations/$(orgId)/Members/$(request.auth.uid)).data.UserRole in ['admin', 'superadmin'];
    }
    
    function isMemberOfOrg(orgId) {
      return request.auth != null && 
        exists(/databases/$(database)/documents/Organizations/$(orgId)/Members/$(request.auth.uid));
    }
    
    match /Users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      match /MyApplications/{appId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    match /Organizations/{orgId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if isAdminOfOrg(orgId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
      
      match /Locations/{locationId} {
        allow read: if request.auth != null;
        allow write: if isAdminOfOrg(orgId);
      }
      match /Items/{itemId} {
        allow read: if request.auth != null;
        allow write: if isAdminOfOrg(orgId);
      }
      match /Members/{memberId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && (
          resource.data.UserRef == /databases/$(database)/documents/Users/$(request.auth.uid) || isAdminOfOrg(orgId)
        );
        allow update, delete: if isAdminOfOrg(orgId) || isSuperAdmin();
      }
      match /Requests/{requestId} {
        allow read: if isMemberOfOrg(orgId);
        allow create: if isMemberOfOrg(orgId);
        allow update, delete: if isAdminOfOrg(orgId);
      }
    }
    
    match /Claims/{claimId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    match /AppAdmins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }
  }
}
